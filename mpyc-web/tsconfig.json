{
  "compilerOptions": {
    // "declaration": true,
    "allowJs": true,
    "checkJs": false,
    "baseUrl": "./types",
    // "declarationDir": "types",
    "target": "ES2022",
    "useDefineForClassFields": true,
    "module": "ES2022",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable",
      "WebWorker"
    ],
    "jsx": "preserve",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": true,
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src",
  ]
}